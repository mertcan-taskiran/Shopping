@model IEnumerable<Shopping.Models.Product>
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .img-thumbnail {
        border: none;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            @await Component.InvokeAsync("CategoryList")
        </div>
        <div class="col-md-9">
            <div class="row">
                @if (Model.Count() > 0)
                {
                    <partial name="_Cards" />
                }
                else
                {
                    <div class="alert alert-warning">No Product</div>
                }
            </div>
        </div>
    </div>
</div>

